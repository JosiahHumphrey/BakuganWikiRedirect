{
  "name": "Bakugan Wiki Redirector",
  "author": "proEndreeper, edited by seewhati",
  "version": "1.0.1",
  "description": "Redirects Bakugan Wikia/Fandom requests to Baku Wiki",
  "permissions": ["webRequest", "webRequestBlocking", "storage",
                  "*://bakugan.wikia.com/*",
                  "*://bakugan.fandom.com/*"],

  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "browser_action": {
    "default_icon": "icon32.png",
    "default_title": "Bakugan Wiki Redirector",
    "default_popup": "popup.html"
  },

  "icons":{
  	 "48": "icon48.png",
  	"128": "icon128.png"
  },

  "manifest_version": 2
}
